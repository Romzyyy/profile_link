---
import messege from '../data/messege'
---

<div class='flex justify-center mt-4 gap-3'>
    <div
        class='flex items-center space-x-1.5 rounded-lg bg-blue-500 px-4 py-1.5 text-white duration-100 hover:bg-blue-600'>
        <a href='/resumecv.pdf'>
            <button class='text-sm'>Download CV</button></a
        >
        <i class='ri-download-2-line'></i>
    </div>
    {
        messege.map((call) => (
            <div class='flex items-center space-x-1.5 rounded-lg bg-slate-400 px-4 py-1.5 text-white duration-100 hover:bg-slate-600 cursor-pointer'>
                <a href={call.url}>
                    <i class={call.icon} />
                </a>
            </div>
        ))
    }
</div>
